<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/PADDING_30"
    android:paddingTop="20dp"
    android:paddingRight="@dimen/PADDING_30"
    android:paddingBottom="20dp"
    tools:context=".Editar_objeto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFotoEdit"
                android:layout_width="200dp"
                android:layout_height="200dp"
                tools:srcCompat="@tools:sample/avatars" />

            <View
                android:id="@+id/divider39"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/etNomEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName" />

            <View
                android:id="@+id/divider40"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/etRefEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:ems="10"
                android:hint="Referencia"
                android:inputType="textPersonName" />

            <View
                android:id="@+id/divider41"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/etPrecEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:ems="10"
                android:hint="Precio"
                android:inputType="number" />

            <View
                android:id="@+id/divider42"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/etClaveEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:ems="10"
                android:hint="Palabra Clave"
                android:inputType="textPersonName" />

            <View
                android:id="@+id/divider44"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/etDescEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:ems="10"
                android:hint="Descripcion"
                android:inputType="textMultiLine" />

            <View
                android:id="@+id/divider43"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opcional:"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider45"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etTamEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@android:drawable/ic_menu_edit"
                    android:ems="10"
                    android:hint="TamaÃ±o"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etPotEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@android:drawable/ic_menu_edit"
                    android:ems="10"
                    android:hint="Potencia"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <View
                android:id="@+id/divider46"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnAcpEdit"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/Botones"
                android:onClick="aceptar"
                android:text="Guardar" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>