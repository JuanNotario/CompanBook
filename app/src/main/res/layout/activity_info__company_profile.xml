<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="@color/ColorOscuro"
    android:orientation="vertical"
    android:paddingLeft="@dimen/PADDING_30"
    android:paddingTop="@dimen/PADDING_30"
    android:paddingRight="@dimen/PADDING_30"
    tools:context="info_CompProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="2"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            android:src="@drawable/ic_info" />
    </RelativeLayout>

    <View
        android:id="@+id/divider13"
        android:layout_width="270dp"
        android:layout_height="16dp"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/tvErrorGenerico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/info"
        android:textAlignment="center"
        android:textColor="@color/ColorClaro2" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="@dimen/PADDING_30"
        android:layout_marginBottom="@dimen/PADDING_30"
        android:layout_weight="2"
        android:background="@color/ColorAppClaro"
        android:text="@string/VAL_BACK"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />
</LinearLayout>