<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="2"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            android:src="@drawable/ic_info" />
    </RelativeLayout>

    <View
        android:id="@+id/divider25"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/tvErrorGenerico2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/recomendacion"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnRegresar2"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="@dimen/PADDING_30"
        android:layout_marginBottom="@dimen/PADDING_30"
        android:layout_weight="2"
        android:background="@color/Botones"
        android:text="@string/VAL_BACK"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

</LinearLayout>