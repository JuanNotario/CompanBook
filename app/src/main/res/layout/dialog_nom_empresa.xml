<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/PADDING_30"
    android:paddingTop="20dp"
    android:paddingRight="@dimen/PADDING_30"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Introduzca el nombre de la empresa:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <View
        android:id="@+id/divider35"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <EditText
        android:id="@+id/etNomEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre de la empresa:"
        android:inputType="textPersonName" />

    <View
        android:id="@+id/divider36"
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <Button
        android:id="@+id/btnAcpNomEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Botones"
        android:text="Aceptar" />

    <View
        android:id="@+id/divider37"
        android:layout_width="match_parent"
        android:layout_height="14dp" />

    <Button
        android:id="@+id/btnCancNomEmpr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Botones"
        android:text="Cancelar" />
</LinearLayout>